generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model StockLedger {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  mmaCode    String
  supplierId Int
  shade      String
  size       String

  qtyDelta Float
  reason   String // enforce in code

  transportId String? // Null if Deposit?
  ts          BigInt
  meta        String?

  @@index([mmaCode])
  @@index([supplierId])
  @@index([mmaCode, supplierId, shade, size])
  @@index([transportId])
}

model StockTransport {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  transportId     String
  transportNumber String? // ðŸ‘ˆ optional truck number (human reference)

  type String // enforce in code

  fromMmaCode String?
  toMmaCode   String?

  supplierId Int
  shade      String
  size       String

  qtyDelta Float
  ts       BigInt
  meta     String?

  @@index([transportId])
  @@index([type])
  @@index([fromMmaCode])
  @@index([toMmaCode])
}

model Supplier {
  id   Int     @id @default(autoincrement())
  code String  @unique
  name String
  area String?

  createdAt DateTime @default(now())
}

// -------------------- PROCESS TABLES (aligned) --------

model sorting_tbl {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  committedAt DateTime?
  ht          Decimal? // optional attribute
  wastage     Decimal? // optional attribute
  meta        String?

  @@index([createdAt])
}

model screening_tbl {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  qtyT        Decimal
  committedAt DateTime?
  meta        String?

  @@index([createdAt])
}
