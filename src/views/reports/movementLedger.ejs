<!DOCTYPE html>
<html>
<head>
  <title><%= report.meta.title %></title>
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="stylesheet" href="/css/reports.css" />
</head>

<body>

  <%- include('../partials/nav') %>

  <div class="report-container">

    <div class="report-card">

      <div class="report-title">
        <%= report.meta.title %>
      </div>

      <div class="report-meta">
        Generated at: <%= report.meta.generatedAt %>
      </div>

      <% if (report.meta.filters && Object.keys(report.meta.filters).length > 0) { %>
        <div class="report-meta">
          Filters:
          <% Object.entries(report.meta.filters).forEach(([k, v]) => { %>
            <span><strong><%= k %>:</strong> <%= v %></span>&nbsp;
          <% }) %>
        </div>
      <% } %>

      <div class="kpis">
        <div class="kpi-box">
          <div class="kpi-label">Total Rows</div>
          <div class="kpi-value"><%= report.kpis.totalRows %></div>
        </div>

        <div class="kpi-box">
          <div class="kpi-label">Net Movement</div>
          <div class="kpi-value"><%= report.kpis.totalNet %></div>
        </div>
      </div>

      <table>
        <thead>
          <tr>
            <% report.table.columns.forEach(col => { %>
              <th><%= col.label %></th>
            <% }) %>
          </tr>
        </thead>

        <tbody>
          <% if (report.table.rows.length === 0) { %>
            <tr>
              <td colspan="<%= report.table.columns.length %>" class="empty-row">
                No movement found.
              </td>
            </tr>
          <% } else { %>
            <% report.table.rows.forEach(row => { %>
              <tr>
                <% report.table.columns.forEach((col, idx) => { %>
                  <td class="<%= idx === 5 ? 'text-warning' : '' %>">
                    <%= row[col.key] ?? '' %>
                  </td>
                <% }) %>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>

    </div>

  </div>

</body>
</html>