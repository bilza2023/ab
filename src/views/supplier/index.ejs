<!DOCTYPE html>
<html>
<head>
  <title>Suppliers</title>
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="stylesheet" href="/css/supplier.css" />
</head>

<body>

  <%- include('../partials/nav') %>

  <div class="page-container">

    <div class="page-header">
      <h1>ğŸ¢ Supplier Management</h1>
      <p class="page-subtitle">
        Manage supplier registry and ownership mapping.
      </p>
    </div>

    <!-- CREATE FORM -->
    <div class="card">
      <form method="POST" action="/suppliers/create" class="supplier-form">

        <div class="form-grid">
          <div>
            <label>Supplier Code</label>
            <input type="text" name="code" required />
          </div>

          <div>
            <label>Supplier Name</label>
            <input type="text" name="name" required />
          </div>

          <div>
            <label>Area</label>
            <input type="text" name="area" />
          </div>
        </div>

        <button type="submit" class="btn-primary">
          â• Add Supplier
        </button>
      </form>
    </div>

    <!-- LIST -->
    <div class="card">

      <% if (!suppliers || suppliers.length === 0) { %>
        <div class="empty-state">
          No suppliers found.
        </div>
      <% } else { %>

        <div class="supplier-list">

          <% suppliers.forEach(supplier => { %>

            <div class="supplier-item">

              <div class="supplier-main">
                <div class="supplier-name">
                  <%= supplier.name %>
                </div>
                <div class="supplier-meta">
                  <span>ID: <%= supplier.id %></span>
                  <span>Code: <%= supplier.code %></span>
                  <span>Area: <%= supplier.area || '-' %></span>
                </div>
              </div>

              <div class="supplier-actions">
                <form method="POST" action="/suppliers/delete/<%= supplier.id %>">
                  <button type="submit" class="btn-danger">
                    ğŸ—‘ Delete
                  </button>
                </form>
              </div>

            </div>

          <% }) %>

        </div>

      <% } %>

    </div>

  </div>

</body>
</html>