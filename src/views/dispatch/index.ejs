<!DOCTYPE html>
<html>
<head>
  <title>Dispatch</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #0f172a;
      color: #e2e8f0;

      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      width: 440px;
    }

    h1 {
      text-align: center;
      margin-bottom: 5px;
    }

    .context {
      text-align: center;
      margin-bottom: 25px;
      color: #94a3b8;
      font-size: 14px;
    }

    form {
      background: #1e293b;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 30px rgba(0,0,0,0.4);
    }

    label {
      display: block;
      margin-top: 18px;
      font-weight: 600;
      font-size: 14px;
    }

    input, select {
      width: 100%;
      padding: 8px;
      margin-top: 6px;
      border-radius: 4px;
      border: 1px solid #334155;
      background: #0f172a;
      color: #e2e8f0;
    }

    button {
      margin-top: 25px;
      width: 100%;
      padding: 10px;
      background: #2563eb;
      border: none;
      border-radius: 4px;
      color: white;
      font-weight: 600;
      cursor: pointer;
    }

    button:hover {
      opacity: 0.9;
    }

    .back {
      display: block;
      text-align: center;
      margin-top: 20px;
      color: #94a3b8;
      text-decoration: none;
      font-size: 14px;
    }

    .back:hover {
      color: white;
    }
  </style>
</head>
<body>

<div class="container">
  <h1>DISPATCH</h1>
  <div class="context">
    <strong><%= fromMmaCode %></strong>
    →
    <strong><%= toMmaCode %></strong>
  </div>

  <form method="POST">

    <input type="hidden" name="fromMmaCode" value="<%= fromMmaCode %>" />
    <input type="hidden" name="toMmaCode" value="<%= toMmaCode %>" />

    <!-- Transport Number (Optional Truck No) -->
<label>Transport Number (Optional)</label>
<input name="transportNumber" type="text" placeholder="e.g. ABC-1234" />

   <!-- Supplier Dropdown -->
    <label>Supplier</label>
    <select name="supplierId" required>
      <option value="">Select Supplier</option>
      <% suppliers.forEach(s => { %>
        <option value="<%= s.id %>">
          <%= s.code %> - <%= s.name %>
        </option>
      <% }) %>
    </select>

    <!-- Shade Dropdown -->
    <label>Shade</label>
    <select name="shade" required>
      <% shades.forEach(shade => { %>
        <option value="<%= shade %>"><%= shade %></option>
      <% }) %>
    </select>

    <!-- Size Dropdown -->
    <label>Size</label>
    <select name="size" required>
      <% sizes.forEach(size => { %>
        <option value="<%= size %>"><%= size %></option>
      <% }) %>
    </select>

    <!-- Quantity -->
    <label>Quantity</label>
    <input name="qty" type="number" step="0.01" required />

    <button type="submit">Confirm Dispatch</button>
  </form>

  <a class="back" href="/">← Back to Control Panel</a>
</div>

</body>
</html>