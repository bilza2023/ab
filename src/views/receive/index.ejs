<!DOCTYPE html>
<html>
<head>
  <title>Receive</title>

  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/nav.css" />
  <link rel="stylesheet" href="/css/form.css" />
</head>

<body>

  <%- include('../partials/nav') %>

  <div class="page">
    <div class="form-card">

      <h1 class="form-title">Receive Transport</h1>

      <form method="POST" class="form">

        <% if (to) { %>
          <input type="hidden" name="toMmaCode" value="<%= to %>" />
        <% } %>

        <!-- Transport ID -->
        <div class="form-group">
          <label class="form-label">Transport ID</label>
          <input
            name="transportId"
            value="<%= transportId || '' %>"
            class="form-input"
            <%= transportId ? 'readonly' : '' %>
            required
          />
        </div>

        <!-- Quantity -->
        <div class="form-group">
          <label class="form-label">Received Quantity (Weight)</label>
          <input
            name="qty"
            type="number"
            step="0.01"
            class="form-input"
            required
          />
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-success">
            Confirm Receive
          </button>
        </div>

      </form>

      <div class="form-footer">
        <a href="/" class="form-back">‚Üê Back to Control Panel</a>
      </div>

    </div>
  </div>

</body>
</html>